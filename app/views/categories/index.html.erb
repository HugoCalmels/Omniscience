


<h1>Catégories</h1>  
<div class="my-2 my-sm-0">
  <% if is_admin? %>
    <a class="navbar-brand"><%= link_to "Créer une nouvelle Catégorie", new_category_path %></a>
  <% end %>
</div>
<br>

<style>
.my-container {
border: 2px solid rgb(166, 155, 158);
}

</style>

<div class="container my-container">
  <div class="d-flex justify-content-center">
    <div class="bs-component">
      
    <br>
      <% @categories.each do |category| %>
        <h3><%= link_to category.title, category_path(category.id) %></h3>
      <% end %>
      <br>
      <%= link_to "Créer une nouvelle Catégorie", new_category_path %>
      <br></br>
      
    </div>
  </div>
</div>


