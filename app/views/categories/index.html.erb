

<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10">
    <% if is_admin? %>
    <center>
    <%= link_to "Créer une nouvelle Catégorie", new_category_path, class: 'btn btn-lg btn-success', style: 'font-weight: 400;'%>
    </center>
    <% end %>
    <br>
    <% @categories.each do |category| %>
      <div class="card mt-5">
      
        <div class="card-header">
       
          <h5 class="card-title"><%= link_to category.title, category_path(category.id) %></h5>
          <p class="card-text ">On pensera à rajouter une colonne description, c'est promis !</p>
        </div>
        
        <div style="width:100%; height:400px; display: flex; justify-content: center">
        <%= image_tag(category.image) if category.image.attached? %>
      
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-1">
    </div>
  </div>




