<div class="container mt-5">
  <div class ="image">
    <img src="https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="">
  </div>
  <main class="container mt-5">
    <div class="card my-3 text-center w-50 card-center">
      <h2 class="action-banner card-header">Mot de passe oubli√© ?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mt-4 mb-4 col-sm">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="actions mt-3 mb-3">
            <%= f.submit "Recevoir un email", class: "btn btn-success" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
      
    </div>
  </main> 
</div>


<STYLE>
.image > img {
  float: left;
  width: 80%;
  height: 410px;
}
.container {
  display : flex;
  justify-content: space-around; 
  align-items: center;
}
</STYLE>