<style>
.my-container {
border: 2px solid rgb(166, 155, 158);
}

</style>

<div class="container my-container">
    <div class="d-flex justify-content-center">
        <div class="bs-component">

        <br>

        <%= form_for @video do |f| %>

            <div class="field">
                <%= f.label :Titre %>
                <%= f.text_field :title %>
            </div>

            <br>

            <div class="field">
                <%= f.label :Fichier_Mp4 %>
                <%= f.file_field :clip %>
            </div>

            <br>
        
            <div class="field">
                <p>Sélectionner sa catégorie <%= f.select :category_id, Category.all.map {|c| [c.title, c.id]} %></p>
            </div>

            <br>        

            <div class="field">
                <%= f.label :description %>
                <%= f.text_area :description %>
            </div>
        
            <br>

            <div class="field">
                <%= f.submit " Valider " %>
            </div>

            <br>

            <% end %>

        </div>
    </div>
</div>

