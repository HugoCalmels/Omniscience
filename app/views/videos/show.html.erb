<STYLE>
.vid{
  display:flex;
  flex-direction: column;
  
}
</STYLE>


<body>
<%= link_to video_path %>
<div class="container vid text-center">

    <div style="width:1280px; height:720px">
        <%= video_tag(url_for(@video.clip), style:'width:100%;height:720px', controls:'') %>
    </div>

    <div>
    <br></br>
        <h3>Titre : "<%=@video.title %>"</h3>
        <p><strong> Cat√©gorie</strong> : <%= @video.category.title %></p>
        <hr>
    </div>

    <div>
        <p><strong> Auteur</strong> : <%= @video.user.name %></p> 
        <% if (current_user && current_user.id == @video.user_id) || current_user.admin %>
            <%= link_to "Modifier", edit_video_path(@video.id), class: 'btn btn-sm btn-outline-secondary'%>
            <%= link_to "Supprimer", video_path(@video.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary'%>
        <% end %>
        <hr>
    </div>

    <div>
        <p><strong> Description</strong> : <%=@video.description %></p>
        <hr>
    </div>

    <div>
        <%= render 'comments/comment' %>
    </div>
</div>





  <script src="https://vjs.zencdn.net/7.11.4/video.min.js"></script>
 
 </div>
</body>